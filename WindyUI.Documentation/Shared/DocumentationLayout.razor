@inherits LayoutComponentBase
@using WindyUI.Navbar;

<main class="grid md:grid-cols-5 h-full">
    <!--Sidebar-->
    <Sidebar>
        <LogoSection>
            <div class="p-4 mr-1">
                <img class="hidden md:block h-16 w-auto ml-4" src="/img/logos/Isologotipo-Invertido.svg" alt="Logo">
            </div>
        </LogoSection>    
        <OptionsSection>
            <SidebarLink Text="Welcome" Route="/Welcome" />
            <SidebarLink Text="Typography" Route="/Typography" />
            <SidebarLink Text="Buttons" Route="/Buttons" />
            <SidebarLink Text="Table" Route="/Table" />
            <SidebarLink Text="Icons" Route="/Icons" />
            <SidebarLink Text="Forms" Route="/Forms" />
            <SidebarLink Text="Modals" Route="/Modals" />
            <SidebarLink Text="Notifications" Route="/Notifications" />
        </OptionsSection>
    </Sidebar>
    <div class="md:col-start-2 md:col-span-4">
        <!--Header-->
        <WindyUI.Navigation.Navbar Color="Navigation.NavigationColors.PrimaryDark">
            <MobileBrandingFragment>
                <img class="flex md:hidden h-10 w-auto" src="/img/logos/Isotipo-Invertido.svg" alt="Logo">
            </MobileBrandingFragment>
            <BrandingFragment>
                <div class="hidden lg:block md:ml-6">
                    <div class="flex lg:space-x-1 xl:space-x-4">
                        <WindyUI.Navigation.NavbarLink Route="/Welcome">
                            Welcome
                        </WindyUI.Navigation.NavbarLink>
                        <WindyUI.Navigation.NavbarLink Route="/Typography">
                            Typography
                        </WindyUI.Navigation.NavbarLink>
                        <WindyUI.Navigation.NavbarLink Route="/Buttons">
                            Buttons
                        </WindyUI.Navigation.NavbarLink>
                        <WindyUI.Navigation.NavbarLink Route="/Table">
                            Table
                        </WindyUI.Navigation.NavbarLink>
                        <WindyUI.Navigation.NavbarLink Route="/Icons">
                            Icons
                        </WindyUI.Navigation.NavbarLink>
                        <WindyUI.Navigation.NavbarLink Route="/Forms">
                            Forms
                        </WindyUI.Navigation.NavbarLink>
                        <WindyUI.Navigation.NavbarLink Route="/Modals">
                            Modals
                        </WindyUI.Navigation.NavbarLink>
                        <WindyUI.Navigation.NavbarLink Route="/Notifications">
                            Notifications
                        </WindyUI.Navigation.NavbarLink>
                    </div>
                </div>
            </BrandingFragment>
            <MobileNavigationFragment>
                <div class="px-2 pt-2 pb-3 md:space-y-1">
                    <WindyUI.Navigation.NavbarMobileLink Route="/Welcome">
                        Welcome
                        </WindyUI.Navigation.NavbarMobileLink>
                    <WindyUI.Navigation.NavbarMobileLink Route="/Typography">
                        Typography
                    </WindyUI.Navigation.NavbarMobileLink>
                    <WindyUI.Navigation.NavbarMobileLink Route="/Buttons">
                        Buttons
                    </WindyUI.Navigation.NavbarMobileLink>
                    <WindyUI.Navigation.NavbarMobileLink Route="/Table">
                        Table
                    </WindyUI.Navigation.NavbarMobileLink>
                    <WindyUI.Navigation.NavbarMobileLink Route="/Icons">
                        Icons
                    </WindyUI.Navigation.NavbarMobileLink>
                    <WindyUI.Navigation.NavbarMobileLink Route="/Forms">
                        Forms
                    </WindyUI.Navigation.NavbarMobileLink>
                    <WindyUI.Navigation.NavbarMobileLink Route="/Modals">
                        Modals
                    </WindyUI.Navigation.NavbarMobileLink>
                    <WindyUI.Navigation.NavbarMobileLink Route="/Notifications">
                        Notifications
                    </WindyUI.Navigation.NavbarMobileLink>
                </div>
            </MobileNavigationFragment>
        </WindyUI.Navigation.Navbar>
        <!--Page content-->
        <div class="py-6 px-6">
            @Body
        </div>
    </div>
</main>


