@inherits LayoutComponentBase
@using WindyUI.Navigation;

<main class="grid md:grid-cols-5 h-full">
    <!--Sidebar-->
    <Sidebar>
        <BrandingFragment>
            <div class="p-4 mr-1">
                <img class="hidden md:block h-16 w-auto ml-4" src="/img/logos/Isologotipo-Invertido.svg" alt="Logo">
            </div>
        </BrandingFragment>
        <NavigationFragment>
            <SidebarLink Route="/Welcome">Welcome</SidebarLink>
            <SidebarLink Route="/Typography">Typography</SidebarLink>
            <SidebarLink Route="/Buttons">Buttons</SidebarLink>
            <SidebarLink Route="/Table">Table</SidebarLink>
            <SidebarLink Route="/Icons">Icons</SidebarLink>
            <SidebarLink Route="/Forms">Forms</SidebarLink>
            <SidebarLink Route="/Modals">Modals</SidebarLink>
            <SidebarLink Route="/Notifications">Notifications</SidebarLink>
        </NavigationFragment>
    </Sidebar>
    <div class="md:col-start-2 md:col-span-4">
        <!--Header-->
        <Navbar Color="Navigation.NavigationColors.PrimaryDark">
            <MobileBrandingFragment>
                <img class="flex md:hidden h-10 w-auto" src="/img/logos/Isotipo-Invertido.svg" alt="Logo">
            </MobileBrandingFragment>
            <BrandingFragment>
                <div class="hidden lg:block md:ml-6">
                    <div class="flex lg:space-x-1 xl:space-x-4">
                        <NavbarLink Route="/Welcome">
                            Welcome
                        </NavbarLink>
                        <NavbarLink Route="/Typography">
                            Typography
                        </NavbarLink>
                        <NavbarLink Route="/Buttons">
                            Buttons
                        </NavbarLink>
                        <NavbarLink Route="/Table">
                            Table
                        </NavbarLink>
                        <NavbarLink Route="/Icons">
                            Icons
                        </NavbarLink>
                        <NavbarLink Route="/Forms">
                            Forms
                        </NavbarLink>
                        <NavbarLink Route="/Modals">
                            Modals
                        </NavbarLink>
                        <NavbarLink Route="/Notifications">
                            Notifications
                        </NavbarLink>
                    </div>
                </div>
            </BrandingFragment>
            <MobileNavigationFragment>
                <div class="px-2 pt-2 pb-3 md:space-y-1">
                    <NavbarMobileLink Route="/Welcome">
                        Welcome
                    </NavbarMobileLink>
                    <NavbarMobileLink Route="/Typography">
                        Typography
                    </NavbarMobileLink>
                    <NavbarMobileLink Route="/Buttons">
                        Buttons
                    </NavbarMobileLink>
                    <NavbarMobileLink Route="/Table">
                        Table
                    </NavbarMobileLink>
                    <NavbarMobileLink Route="/Icons">
                        Icons
                    </NavbarMobileLink>
                    <NavbarMobileLink Route="/Forms">
                        Forms
                    </NavbarMobileLink>
                    <NavbarMobileLink Route="/Modals">
                        Modals
                    </NavbarMobileLink>
                    <NavbarMobileLink Route="/Notifications">
                        Notifications
                    </NavbarMobileLink>
                </div>
            </MobileNavigationFragment>
        </Navbar>
        <!--Page content-->
        <div class="py-6 px-6">
            @Body
        </div>
    </div>
</main>


