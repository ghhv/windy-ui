        new NavigationOption { Link = "/Typography", Text = "Typography" },
        new NavigationOption { Link = "/Buttons", Text = "Buttons" },
        new NavigationOption { Link = "/Table", Text = "Table" },
        new NavigationOption { Link = "/Icons", Text = "Icons" },
        new NavigationOption { Link = "/Forms", Text = "Forms" },
        new NavigationOption { Link = "/Modals", Text = "Modals" },
