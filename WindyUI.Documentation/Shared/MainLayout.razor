@inherits LayoutComponentBase
@using WindyUI.Navbar;

<div class="grid md:grid-cols-5 h-full">
    <!--Sidebar-->
    <Sidebar Options="Options" LogoUrl="/img/logos/Isologotipo.svg" />
    <main class="md:col-start-2 md:col-span-4">
        <!--Header-->
        <Navbar Options="Options" />
        <!--Page content-->
        <div class="py-6 px-6">
            @Body
        </div>
    </main>

</div>

