@using WindyUI.Base;
@inherits ChildBase<Navbar>

<NavLink href="@Route" ActiveClass="@ActiveClass" class="@DefinedClass" Match="NavLinkMatch.Prefix">
    @ChildContent
</NavLink>

@code {

    private readonly string ActiveClass = "bg-primary text-primary-text px-3 py-2 rounded-md text-sm font-medium";

    private readonly string InactiveClass = "text-primary-text hover:bg-primary px-3 py-2 rounded-md text-sm font-medium";

    private string DefinedClass { get { return  $"{InactiveClass} {CssClass}"; } }

    [Parameter]
    public string CssClass { get; set; } = "";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Route { get; set; } = "";
}
