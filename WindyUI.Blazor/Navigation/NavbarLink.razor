@inherits BaseNavigationLink;

<NavLink href="@Route" ActiveClass="@ActiveClass" class="@DefinedClass" Match="NavLinkMatch.Prefix">
    @ChildContent
</NavLink>

@code {
    private string DefinedClass { get { return $"{InactiveClass} {CssClass}"; } }

    private string ActiveClass
    {
        get
        {
            return $"{ActiveColorClass} px-3 py-2 rounded-md text-sm font-medium";
        }
    }

    private string InactiveClass
    {
        get
        {
            return $"{InactiveColorClass} px-3 py-2 rounded-md text-sm font-medium";
        }
    }
}
