@inherits BaseNavigationLink;

<NavLink href="@Route" class="@DefinedClass" Match="NavLinkMatch.Prefix">
    @ChildContent
</NavLink>

@code {

    private string TextColorClass
    {
        get
        {
            var textColor = "";

            if(Parent is not null)
            {
                switch(Parent.Color)
                {
                    case NavigationColors.Primary:
                    case NavigationColors.PrimaryDark:
                    case NavigationColors.PrimaryLight:
                        textColor = "text-primary-text";
                        break;
                    case NavigationColors.Secondary:
                    case NavigationColors.SecondaryDark:
                    case NavigationColors.SecondaryLight:
                        textColor = "text-secondary-text";
                        break;
                }
            }

            return textColor;
        }
    }

    private string DefinedClass { get { return $"{InactiveClass} {CssClass}"; } }

    private string InactiveClass
    {
        get
        {
            return $"block {TextColorClass} px-3 py-2 rounded-md text-base font-medium";
        }
    }
}
