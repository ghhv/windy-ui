@inherits BaseNavigationLink;

<NavLink href="@Route" ActiveClass="@ActiveColorClass" class="@DefinedClass" Match="NavLinkMatch.Prefix">
    @ChildContent
</NavLink>

@code {

    private string DefinedClass { get { return $"{InactiveClass} {CssClass}"; } }

    private string InactiveClass
    {
        get
        {
            return $"{InactiveColorClass} block px-3 py-2 rounded-md text-base font-medium";
        }
    }
}
