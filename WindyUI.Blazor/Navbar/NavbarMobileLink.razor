<NavLink href="@Route" ActiveClass="@_activeClass" class="text-primary-text block px-3 py-2 rounded-md text-base font-medium" Match="NavLinkMatch.Prefix">
    @Text
</NavLink>

@code {

    private string _activeClass = "bg-primary";

    [Parameter]
    public string Route { get; set; } = "";

    [Parameter]
    public string Text { get; set; } = "";
}
