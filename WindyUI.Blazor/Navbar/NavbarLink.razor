@using WindyUI.Base;
@inherits ChildBase<Navbar>

<NavLink href="@Route" ActiveClass="@ActiveClass" class="@InactiveClass" Match="NavLinkMatch.Prefix">
    @Text
</NavLink>

@code {

    private readonly string ActiveClass = "bg-primary text-primary-text px-3 py-2 rounded-md text-sm font-medium";

    private readonly string InactiveClass = "text-primary-text hover:bg-primary px-3 py-2 rounded-md text-sm font-medium";

    [Parameter]
    public string Route { get; set; } = "";

    [Parameter]
    public string Text { get; set; } = "";
}
