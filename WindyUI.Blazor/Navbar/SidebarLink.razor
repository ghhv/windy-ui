@using WindyUI.Base;
@inherits ChildBase<Sidebar>

<NavLink href="@Route" ActiveClass="@_activeClass" class="@_inactiveClass" Match="NavLinkMatch.Prefix">
    @Text
</NavLink>


@code {
    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public string Route { get; set; } = "";

    private readonly string _activeClass = "text-primary-light bg-primary-dark";
    private readonly string _inactiveClass = "hover:bg-primary-dark hover:text-primary-light text-primary-text p-2 hover:bg-primary-dark pl-6 py-3 block";
}
