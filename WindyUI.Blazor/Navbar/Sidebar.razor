<div class="hidden md:block md:col-span-1 bg-primary">
    <nav>
        <div class="flex-shrink-0 flex items-center p-4">
            <img class="hidden lg:block h-16 w-auto" src="@LogoUrl" alt="Logo">
        </div>

        @foreach (var option in Options)
        {
            <SidebarLink Text="@option.Text" Route="@option.Link" />
        }
    </nav>
</div>

@code {
    [Parameter]
    public List<NavigationOption> Options { get; set; } = new List<NavigationOption>();

    [Parameter]
    public string LogoUrl { get; set; } = "";
}